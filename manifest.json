{
  "manifest_version": 2,
  // "update_url":"http://clients2.google.com/service/update2/crx",
  "name": "Clear Japanese and Chinese",
  "description": "This extension allows you to easily switch to fonts which are much clearer to see Japanese and Chinese articles than default font in Chrome. This extension is for users who want to see MAC-like clear fonts in Windows and Linux.",
  "version": "1.0",

  "permissions": [
    "tabs", "http://*/*", "https://*/*", "activeTab", "storage"
  ],

  "browser_action": {
    "default_title": "ClearJC",
    "default_icon": "icons/icon.png",
    "default_popup": "popup.html"
  },

  // "background": {
  //   "scripts": ["background2.js"],
  //   "persistent": false
  // },

  "content_scripts": [ 
    {
      "js": [ "lib/jquery.min.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
    }, 
    {
      "js": [ "cs.js" ],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
    }]
